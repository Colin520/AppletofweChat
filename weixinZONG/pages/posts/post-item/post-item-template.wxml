<template name="postItem">
  <view class='post-container'>
    <view class='post-author-date'>
      <image class='post-author' src='{{post_img}}'></image>
      <text class='post-data'>{{date}}</text>
    </view>
    <text class='post-title'>{{title}}</text>
    <image class='post-image' src='{{author_img}}'></image>
    <text class='post-content'>{{content}}</text>
    <view class='post-like'>
      <image class='post-like-image' src='../../images/icon/shouc.png'></image>
      <text class='post-like-font'>{{view_num}}</text>
      <image class='post-like-image' src='../../images/icon/xinxi.png'></image>
      <text class='post-like-font'>{{collect_num}}</text>
    </view>
  </view>
</template>